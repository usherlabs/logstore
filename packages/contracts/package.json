{
	"name": "@logsn/contracts",
	"version": "0.0.20",
	"description": "The Log Store Network Solidity Contracts",
	"author": "Ryan Soury <ryan@usher.so>",
	"license": "GPL-3.0",
	"private": false,
	"types": "./dist/index.d.ts",
	"main": "./dist/index.js",
	"files": [
		"./dist",
		"./address.json",
		"./artifacts",
		"./src/**/*.sol"
	],
	"scripts": {
		"build": "run-s compile types",
		"clean": "del ./artifacts ./cache ./coverage ./dist ./types ./coverage.json",
		"compile": "hardhat compile",
		"types": "tsc -b tsconfig.types.json",
		"deploy:hardhat": "hardhat run scripts/0_deployNodeManager.ts --network hardhat",
		"deploy:mumbai": "hardhat run scripts/0_deployNodeManager.ts --network polygon-mumbai",
		"deploy:polygon": "hardhat run scripts/0_deployNodeManager.ts --network polygon-mainnet",
		"deploy:streamr": "hardhat run scripts/0_deployNodeManager.ts --network streamr-dev",
		"price:byte": "hardhat run scripts/price/byte.ts",
		"price:token": "hardhat run scripts/price/token.ts",
		"lint": "run-s lint:sol lint:ts",
		"lint:sol": "solhint \"**/*.sol\"",
		"lint:ts": "eslint \"{scripts,src,test,tasks}/**/*.ts\"",
		"test": "hardhat test",
		"format": "prettier --write \"**/*.sol\"",
		"format:ts": "prettier --write \"{scripts,test,utils}/**/*.ts\""
	},
	"keywords": [
		"blockchain",
		"ethers",
		"ethereum",
		"hardhat",
		"smart-contracts",
		"solidity",
		"logstore",
		"typescript"
	],
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@ethersproject/abi": "^5.7.0",
		"@ethersproject/abstract-signer": "^5.7.0",
		"@ethersproject/providers": "^5.7.2",
		"@logsn/protocol": "workspace:*",
		"@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.7",
		"@nomicfoundation/hardhat-toolbox": "^2.0.1",
		"@nomiclabs/hardhat-ethers": "^2.2.2",
		"@nomiclabs/hardhat-etherscan": "^3.1.7",
		"@openzeppelin/contracts": "^4.8.2",
		"@openzeppelin/hardhat-upgrades": "^1.22.1",
		"@typechain/ethers-v5": "^10.2.0",
		"@typechain/hardhat": "^6.1.5",
		"@types/chai": "^4.3.4",
		"@types/estree": "^1.0.0",
		"@types/lodash.snakecase": "^4.1.7",
		"@types/mocha": "^10.0.1",
		"alchemy-sdk": "^2.9.1",
		"arweave": "^1.13.7",
		"axios": "^1.4.0",
		"chai": "^4.3.7",
		"cross-env": "^7.0.3",
		"decimal.js": "^10.4.3",
		"del-cli": "^5.0.0",
		"dotenv": "^16.0.3",
		"ethereumjs-wallet": "^1.0.2",
		"ethers": "^5.7.2",
		"hardhat": "^2.16.1",
		"hardhat-abi-exporter": "^2.10.1",
		"hardhat-contract-sizer": "^2.7.0",
		"hardhat-deploy": "^0.11.22",
		"hardhat-gas-reporter": "^1.0.9",
		"lodash.snakecase": "^4.1.1",
		"mocha": "^10.2.0",
		"npm-run-all": "^4.1.5",
		"redstone-api": "^0.4.11",
		"solhint": "^3.4.0",
		"solidity-coverage": "^0.8.2",
		"solidity-docgen": "^0.6.0-beta.34",
		"ts-generator": "^0.1.1",
		"typechain": "^8.1.1"
	},
	"dependencies": {
		"@openzeppelin/contracts-upgradeable": "^4.8.2"
	}
}
